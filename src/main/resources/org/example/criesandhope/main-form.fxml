<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="499.0" prefWidth="898.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.criesandhope.fxController.MainForm">
   <children>
      <TabPane fx:id="tabsPane" layoutX="-3.0" prefHeight="499.0" prefWidth="904.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="userTab" onSelectionChanged="#reloadTableData" text="User Manigment">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="463.0" prefWidth="920.0">
                     <children>
                        <TextField fx:id="filterLogin" layoutX="14.0" layoutY="243.0" promptText="Login" />
                        <TextField fx:id="filterName" layoutX="14.0" layoutY="282.0" promptText="Name" />
                        <TextField fx:id="filterSurname" layoutX="182.0" layoutY="243.0" promptText="Surname" />
                        <TextField fx:id="filterAddress" layoutX="182.0" layoutY="282.0" promptText="Address" />
                        <TextField fx:id="filterPhoneNum" layoutX="355.0" layoutY="243.0" promptText="Phone Number" />
                        <Button layoutX="395.0" layoutY="282.0" mnemonicParsing="false" onAction="#filterUsers" text="Filter" />
                        <Button layoutX="542.0" layoutY="243.0" mnemonicParsing="false" onAction="#createUser" text="Create new User" />
                        <TableView fx:id="userTable" layoutX="2.0" layoutY="14.0" prefHeight="212.0" prefWidth="901.0">
                          <columns>
                              <TableColumn fx:id="userTypeColumn" prefWidth="75.0" text="User type" />
                            <TableColumn fx:id="idColumn" prefWidth="75.0" text="id" />
                            <TableColumn fx:id="loginColumn" prefWidth="75.0" text="Login" />
                              <TableColumn fx:id="passwordColumn" prefWidth="75.0" text="Password" />
                              <TableColumn fx:id="nameColumn" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="surnameColumn" prefWidth="75.0" text="Surname" />
                              <TableColumn fx:id="addressColumn" prefWidth="75.0" text="Address" />
                              <TableColumn fx:id="phoneNumberColumn" prefWidth="109.5" text="Phone number" />
                              <TableColumn fx:id="licenceColumn" prefWidth="75.0" text="Licence" />
                              <TableColumn fx:id="bDateColumn" prefWidth="75.0" text="bDate" />
                              <TableColumn fx:id="cehicleTypeColumn" prefWidth="111.5" text="Vehicle Type" />
                          </columns>
                        </TableView>
                        <Button layoutX="220.0" layoutY="415.0" mnemonicParsing="false" onAction="#deletUser" text="Delete user" />
                        <TextField fx:id="deleteUserIDField" layoutX="21.0" layoutY="415.0" promptText="Users ID" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="reviewTab" text="Review">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab fx:id="ChatTab" onSelectionChanged="#reloadTableData" text="Chat">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="chatListView" layoutX="293.0" layoutY="99.0" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </AnchorPane>
              </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
